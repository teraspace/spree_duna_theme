<% cache spree_nav_cache_key('footer') do %>
<footer class="site__footer">
    <div class="site-footer">
        <div class="container">
            <div class="site-footer__widgets">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="site-footer__widget footer-contacts">
                            <h5 class="footer-contacts__title">Contact Us</h5>
                            <div class="footer-contacts__text">
                              <% if current_store.meta_description %>
                                  <%= current_store.meta_description %>
                              <% end %>                            
                            </div>
                            <ul class="footer-contacts__contacts">
                                <li><i class="footer-contacts__icon fas fa-globe-americas"></i> 715 Fake Street, New York 10021 USA</li>
                                <li><i class="footer-contacts__icon far fa-envelope"></i>
                                  <% if current_store.mail_from_address %>
                                    <%= Spree.t(:email) %>: <%= current_store.mail_from_address %>
                                  <% end %>
                                </li>
                                <li><i class="footer-contacts__icon fas fa-mobile-alt"></i> (800) 060-0730, (800) 060-0730</li>
                                <li><i class="footer-contacts__icon far fa-clock"></i> Mon-Sat 10:00pm - 7:00pm</li>
                            </ul>
                        </div>
                    </div>
                    <% spree_navigation_data.first(2).each do |root| %> 
                      <div class="col-6 col-md-3 col-lg-2">
                          <div class="site-footer__widget footer-links">
                              <h5 class="footer-links__title"><%= link_to root[:title], root[:url] %></h5>
                              <ul class="footer-links__list">
                                <% root[:items].each do |item| %>
                                  <li class="footer-links__item">
                                    <%= link_to item[:title], item[:url], class:"footer-links__link"  %> 
                                  </li>
                                <% end %>              
                              </ul>
                          </div>
                      </div>
                    <% end %>


                    <div class="col-12 col-md-12 col-lg-4">
                        <div class="site-footer__widget footer-newsletter">
                            <h5 class="footer-newsletter__title">Newsletter</h5>
                            <div class="footer-newsletter__text">
                                Praesent pellentesque volutpat ex, vitae auctor lorem pulvinar mollis felis at lacinia.
                            </div>
                            <form action="" class="footer-newsletter__form">
                                <label class="sr-only" for="footer-newsletter-address">Email Address</label>
                                <input type="text" class="footer-newsletter__form-input form-control" id="footer-newsletter-address" placeholder="Email Address...">
                                <button class="footer-newsletter__form-button btn btn-primary">Subscribe</button>
                            </form>
                            <% unless current_store.facebook.blank? && current_store.twitter.blank? && current_store.instagram.blank? %>
                              <div class="footer-newsletter__text footer-newsletter__text--social">
                                <%= Spree.t(:follow_us) %>
                              </div>
                            <% end %>
                            <!-- social-links -->
                            <div class="social-links footer-newsletter__social-links social-links--shape--circle">
                                <ul class="social-links__list">
                                    <li class="social-links__item">
                                        <a class="social-links__link social-links__link--type--rss" href="" target="_blank">
                                            <i class="fas fa-rss"></i>
                                        </a>
                                    </li>
                                    <li class="social-links__item">
                                        <a class="social-links__link social-links__link--type--youtube" href="" target="_blank">
                                            <i class="fab fa-youtube"></i>
                                        </a>
                                    </li>
                                    <li class="social-links__item">
                                        <a class="social-links__link social-links__link--type--rss" href="" target="_blank">
                                             <%= icon(name: 'facebook', width: 22, height: 22) %>
                                        </a>
                                    </li>
                                    <li class="social-links__item">
                                        <a class="social-links__link social-links__link--type--rss" href="" target="_blank">
                                             <%= icon(name: 'instagram', width: 22, height: 22) %>
                                        </a>                               </li>
                                    <li class="social-links__item">
                                        <a class="social-links__link social-links__link--type--rss" href="" target="_blank">
                                             <%= icon(name: 'twitter', width: 22, height: 22) %>
                                        </a>                                    </li>
                                </ul>
                            </div>
                            <!-- social-links / end -->
                        </div>
                    </div>
                </div>
            </div>
            <%= render 'spree/shared/copyright' %>
        </div>
        <div class="totop">
            <div class="totop__body">
                <div class="totop__start"></div>
                <div class="totop__container container"></div>
                <div class="totop__end">
                    <button type="button" class="totop__button">
                        <svg width="13px" height="8px">
                            <use xlink:href=<%= asset_url("sprite.svg#arrow-rounded-up-13x8") %> ></use>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</footer>
<% end %>