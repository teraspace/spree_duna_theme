<header class="site__header d-lg-none">
    <!-- data-sticky-mode - one of [pullToShow, alwaysOnTop] -->
    <div class="mobile-header mobile-header--sticky" data-sticky-mode="pullToShow">
        <div class="mobile-header__panel">
            <div class="container">
                <div class="mobile-header__body">
                    <button class="mobile-header__menu-button">
                        <svg width="18px" height="14px">
                            <use xlink:href=<%= asset_url("sprite.svg#menu-18x14") %> ></use>
                        </svg>
                    </button>
                    <% path = spree.respond_to?(:root_path) ? spree.root_path : main_app.root_path  %>

                    <%=  link_to path, 'aria-label': current_store.name, method: 'get', class: 'mobile-header__logo' do
                            image_tag Spree::Config[:logo], alt: current_store.name, title: current_store.name, width: '80'
                        end
                    %>
                    <div class="search search--location--mobile-header mobile-header__search">
                        <div class="search__body">
                            <%  #render partial: 'spree/shared/search' %>
                            <div class="search__suggestions suggestions suggestions--location--mobile-header"></div>
                        </div>
                    </div>
                    <div class="mobile-header__indicators">
                        <div class="indicator indicator--mobile-search indicator--mobile d-md-none">
                            <button class="indicator__button">
                                <span class="indicator__area">
                                    <svg width="20px" height="20px">
                                        <use xlink:href=<%= asset_url("sprite.svg#search-20") %> ></use>
                                    </svg>
                                </span>
                            </button>
                        </div>
                        <div class="indicator indicator--mobile d-sm-flex d-none">
                            <a href="wishlist.html" class="indicator__button"  style="display: none;">
                                <span class="indicator__area">
                                    <svg width="20px" height="20px">
                                        <use xlink:href=<%= asset_url("sprite.svg#heart-20") %> ></use>
                                    </svg>
                                    <span class="indicator__value">0</span>
                                </span>
                            </a>
                        </div>
                        <div class="indicator indicator--mobile">
                            <a href="cart.html" class="indicator__button">
                                <span class="indicator__area">
                                    <svg width="20px" height="20px">
                                        <use xlink:href=<%= asset_url("sprite.svg#cart-20") %> ></use>
                                    </svg>
                                    <% item_count = simple_current_order&.item_count || 0 %>
                                    <span class="indicator__value"><%= item_count %></span>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>