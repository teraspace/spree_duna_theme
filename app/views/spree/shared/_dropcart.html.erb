

<% @style = style %>

<!-- .dropcart -->
<div class="dropcart dropcart--style--<%=  @style  %>">
    <% if  @style  == 'offcanvas' %>
        <div class="dropcart__backdrop"></div>
    <% end %>
    <div class="dropcart__body">
        <% if  @style  == 'offcanvas' %>
            <div class="dropcart__header">
                <div class="dropcart__title">Shopping Cart</div>
                <button class="dropcart__close" type="button">
                    <svg width="12px" height="12px">
                        <use xlink:href="images/sprite.svg#cross-12"></use>
                    </svg>
                </button>
            </div>
        <% end %>

        <div class="dropcart__products-list">
            <% if Spree::Order.all.last.products.present? %>
                <% Spree::Order.all.last.products.each do |product|  %>
                    <div class="dropcart__product">
                        <div class="product-image dropcart__product-image">
                            <a href="product.html" class="product-image__body">
                                <img class="product-image__img" src="<% product.images.first %>.jpg" alt="">
                            </a>
                        </div>
                        <div class="dropcart__product-info">
                            <div class="dropcart__product-name"><a href="product.html"><%= product.name  %> </a></div>
                            <% if product.present? %>
                                <ul class="dropcart__product-options">
                                    <% for option in product.options %>
                                        <li><% option.name %> : <% option.value %></li>
                                    <% end %>

                                </ul>
                            <% end %>

                            <div class="dropcart__product-meta">
                                <span class="dropcart__product-quantity"><% product.quantity %> </span> Ã—
                                <span class="dropcart__product-price"><% product.price %></span>
                            </div>
                        </div>

                        <button type="button" class="dropcart__product-remove btn btn-light btn-sm btn-svg-icon">
                            <svg width="10px" height="10px">
                                <use xlink:href="images/sprite.svg#cross-10"></use>
                            </svg>
                        </button>
                    </div>
                <% end %>
             <% else %>
                <%= Spree.t('cart_page.empty_info').html_safe %>
             <% end %>
        </div>

        <div class="dropcart__totals">

        </div>

        <div class="dropcart__buttons">
            
            <!-- Para consultar con Mateo  / Gonzalo, se supone que @order pertenece al controller de cart.
                En este caso es mejor consumir el API y olvidarse del MVC de Spree?, o es posible traer @order llamando
                un helper solamente?.
            -->
            <% begin %>
                <% testing = @order.line_items.empty? %>
            <% rescue=>e %>
                <% @order = Spree::Order.last %>
            <% end %>
            <% if @order.line_items.empty? %>                
                <%= link_to Spree.t(:continue_shopping), spree.products_path, class: 'btn btn-primary' %>
            <% else %>
                <%= link_to Spree.t(:view_cart), spree.cart_path, class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
</div>
<!-- .dropcart / end -->
